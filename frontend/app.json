{
  "expo": {
    "name": "Dose Tracker",
    "slug": "dose-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/custom-icon.png",
    "scheme": "dose-tracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/custom-icon.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.emergent.dosetracker"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/custom-icon.png",
      "name": "Dose Tracker",
      "shortName": "DoseTracker",
      "description": "Harm reduction and dose logging application",
      "themeColor": "#7B1FA2",
      "backgroundColor": "#F8F5FA",
      "display": "standalone"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/custom-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
